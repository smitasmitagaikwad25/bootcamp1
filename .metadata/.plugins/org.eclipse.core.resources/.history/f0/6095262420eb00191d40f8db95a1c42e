package com.day2;

public class Flip {
	


	public static void main(String [] args)
	
	{
		
	int	counter=0;
	int head=0;
	int tail=0;
	
	int flip=10;
	double random=0.0;
	
	while(counter<=flip)
	{
		random =Math.random();
		
		
	
		if(Math.random()<0.5)
		{
			head++;
			System.out.println("head:"+head);
			counter++;
			System.out.println("counter:"+counter);
		}
		else
			
		{
			tail++;
			System.out.printl\  //n("tail:"+tail);
			counter++;
			System.out.println("counter:"+counter);
			
		}
		
	}
	}

}
